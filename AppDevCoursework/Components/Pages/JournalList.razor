@page "/journal-list"
@using AppDevCoursework.Data
@inject DatabaseService DatabaseService
@inject NavigationManager NavigationManager

<div class="container my-4">
    <div class="row mb-3">
        <div class="col">
            <h1 class="display-6">My Journal</h1>
        </div>
        <div class="col-auto">
             <a href="/" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> New Entry
            </a>
        </div>
    </div>

    <!-- Search and Filter Section -->
    <div class="row g-2 mb-4 align-items-end p-3 rounded shadow-sm" style="background-color: var(--bg-filter); border: 1px solid var(--border-neutral);">
        <div class="col-md-3">
            <label class="form-label small text-muted">Search</label>
            <input type="text" class="form-control form-control-sm" placeholder="Title/Content..." @bind="searchText" @bind:event="oninput" @onkeyup="HandleSearchEnter" />
        </div>
        <div class="col-md-2">
            <label class="form-label small text-muted">Date</label>
            <input type="date" class="form-control form-control-sm" @bind="filterDate" />
        </div>
        <div class="col-md-2">
             <label class="form-label small text-muted">Mood</label>
             <select class="form-select form-select-sm" @bind="filterMood">
                 <option value="">All Moods</option>
                 @foreach(var m in availableMoods) { <option value="@m">@m</option> }
             </select>
        </div>
        <div class="col-md-2">
             <label class="form-label small text-muted">Tag</label>
             <select class="form-select form-select-sm" @bind="filterTag">
                 <option value="">All Tags</option>
                 @foreach(var t in availableTags) { <option value="@t.Name">@t.Name</option> }
             </select>
        </div>
        <div class="col-md-3 d-flex gap-2">
            <button class="btn btn-primary btn-sm flex-grow-1" @onclick="Search">Filter</button>
            <button class="btn btn-outline-secondary btn-sm" @onclick="ClearFilters">Clear</button>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="d-flex justify-content-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (entries == null || !entries.Any())
    {
        <div class="alert alert-info">
            No journal entries found. Start by creating one!
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 g-4">
            @foreach (var entry in entries)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm" style="cursor: pointer;" @onclick="() => NavigateToEntry(entry.EntryDate)">
                        <div class="card-body">
                            <h5 class="card-title">@entry.Title</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@entry.EntryDate.ToString("D")</h6>
                            <div class="mb-2">
                                <span class="badge bg-info text-dark">@entry.PrimaryMood</span>
                                @if (!string.IsNullOrEmpty(entry.SecondaryMoods))
                                {
                                    @foreach (var mood in entry.SecondaryMoods.Split(',', StringSplitOptions.RemoveEmptyEntries))
                                    {
                                         <span class="badge bg-secondary ms-1">@mood.Trim()</span>
                                    }
                                }
                            </div>
                            <p class="card-text text-truncate" style="max-height: 3em; overflow: hidden;">
                                @((MarkupString)GetPlainText(entry.Content))
                            </p>
                            <div class="mt-auto">
                                @if (!string.IsNullOrEmpty(entry.Tags))
                                {
                                    <div class="mb-2">
                                        @foreach(var tag in entry.Tags.Split(',', StringSplitOptions.RemoveEmptyEntries))
                                        {
                                            <span class="badge rounded-pill me-1" style="background-color: var(--bg-neutral); color: var(--text-body); border: 1px solid var(--border-neutral);">#@tag.Trim()</span>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <nav aria-label="Page navigation" class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <button class="page-link" @onclick="PreviousPage">Previous</button>
                </li>
                
                <li class="page-item disabled">
                    <span class="page-link">Page @currentPage of @totalPages</span>
                </li>

                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                     <button class="page-link" @onclick="NextPage">Next</button>
                </li>
            </ul>
        </nav>
    }
</div>

@code {
    private List<JournalEntry> entries = new();
    private int currentPage = 1;
    private int pageSize = 6;
    private int totalEntries = 0;
    private int totalPages = 1;
    private bool isLoading = true;

    // Filters
    private string searchText = "";
    private DateTime? filterDate;
    private string filterMood = "";
    private string filterTag = "";
    
    private List<Tag> availableTags = new();
    private List<string> availableMoods = new() { 
        "Calm", "Angry", "Grateful", "Curious", "Lonely",
        "Happy", "Nostalgic", "Stressed", "Confident", "Bored",
        "Relaxed", "Anxious", "Thoughtful", "Sad", "Excited"
    };

    protected override async Task OnInitializedAsync()
    {
        availableTags = await DatabaseService.GetTagsAsync();
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        try
        {
            totalEntries = await DatabaseService.GetTotalEntriesCountAsync(searchText, filterDate, filterMood, filterTag);
            totalPages = (int)Math.Ceiling(totalEntries / (double)pageSize);
            
            if (totalPages == 0) totalPages = 1;
            // Reset page if current page is out of bounds (except when 0 result, page 1 is fine)
            if (currentPage > totalPages) currentPage = 1; 

            int skip = (currentPage - 1) * pageSize;
            entries = await DatabaseService.GetJournalEntriesAsync(searchText, filterDate, filterMood, filterTag, skip, pageSize);
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task Search()
    {
        currentPage = 1;
        await LoadData();
    }

    private async Task ClearFilters()
    {
        searchText = "";
        filterDate = null;
        filterMood = "";
        filterTag = "";
        currentPage = 1;
        await LoadData();
    }
    
    private void HandleSearchEnter(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
             _ = Search();
        }
    }

    private async Task PreviousPage()
    {
        if (currentPage > 1)
        {
            currentPage--;
            await LoadData();
        }
    }

    private async Task NextPage()
    {
        if (currentPage < totalPages)
        {
            currentPage++;
            await LoadData();
        }
    }

    private void NavigateToEntry(DateTime date)
    {
        NavigationManager.NavigateTo($"/?date={date:yyyy-MM-dd}");
    }

    // Helper to strip HTML tags for preview (simple regex approach)
    private string GetPlainText(string htmlContent)
    {
        if (string.IsNullOrEmpty(htmlContent)) return string.Empty;
        return System.Text.RegularExpressions.Regex.Replace(htmlContent, "<.*?>", string.Empty);
    }
}
